#!/bin/bash -e

# If running the rails server then create or migrate existing database
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
  ./bin/rails db:prepare
  
  # Seed database if empty (for ephemeral storage like Render free tier)
  # Check if ingredients table is empty - if so, run seeds
  INGREDIENT_COUNT=$(./bin/rails runner "puts Ingredient.count" 2>/dev/null || echo "0")
  if [ "$INGREDIENT_COUNT" = "0" ]; then
    echo "Database empty, running seeds..."
    ./bin/rails db:seed
  else
    echo "Database already seeded ($INGREDIENT_COUNT ingredients found)"
  fi
fi

exec "${@}"
