<div class="cooking-interface grid grid-cols-1 lg:grid-cols-3 gap-6" data-controller="cooking">
  <!-- Left Column: Search + Cooking Pot -->
  <div class="lg:col-span-1 space-y-6">
    <!-- Ingredient Search Section -->
    <section class="bg-stone-800 rounded-xl p-4 shadow-lg border border-stone-700" data-controller="search">
      <h2 class="text-lg font-semibold text-amber-400 mb-3 flex items-center gap-2">
        <span>ğŸ”</span> Search Ingredients
      </h2>
      <div class="relative">
        <input
          type="text"
          data-search-target="input"
          data-action="input->search#query keydown->search#handleKeydown"
          placeholder="Type to search..."
          class="w-full px-4 py-2 bg-stone-700 border border-stone-600 rounded-lg text-stone-100 placeholder-stone-400 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-transparent"
          autocomplete="off"
        >
        <turbo-frame id="ingredient_suggestions" class="block absolute z-50 w-full mt-1">
          <%= render "ingredients/search_results", ingredients: [] %>
        </turbo-frame>
      </div>
    </section>

    <!-- Cooking Pot Section -->
    <section class="bg-stone-800 rounded-xl p-4 shadow-lg border border-stone-700">
      <div class="flex items-center justify-between mb-3">
        <h2 class="text-lg font-semibold text-amber-400 flex items-center gap-2">
          <span>ğŸ¥˜</span> Cooking Pot
        </h2>
        <button type="button"
                class="text-xs px-3 py-1 bg-red-900/50 hover:bg-red-800 text-red-200 rounded-lg transition-colors"
                data-action="click->cooking#clearPot">
          Clear
        </button>
      </div>
      <turbo-frame id="cooking_pot">
        <%= render "cooking/pot", ingredients: @pot_ingredients %>
      </turbo-frame>
    </section>

    <!-- Cooking Result Section -->
    <turbo-frame id="cooking_result">
      <%= render "cooking/result", result: @cooking_result %>
    </turbo-frame>
  </div>

  <!-- Right Column: Recipe Results -->
  <div class="lg:col-span-2">
    <section class="bg-stone-800 rounded-xl p-4 shadow-lg border border-stone-700">
      <h2 class="text-lg font-semibold text-amber-400 mb-4 flex items-center gap-2">
        <span>ğŸ“œ</span> Matching Recipes
      </h2>
      <turbo-frame id="recipe_results">
        <%= render "recipes/list", recipes: @matching_recipes, pot_ingredients: @pot_ingredients %>
      </turbo-frame>
    </section>
  </div>
</div>
