<div class="ingredient-card p-3 bg-stone-700 hover:bg-stone-600 rounded-lg cursor-pointer transition-colors border border-stone-600 hover:border-amber-500/50"
     data-action="click->search#addIngredient"
     data-ingredient-id="<%= ingredient.id %>">
  <div class="flex items-center justify-between gap-3">
    <div class="flex items-center gap-3">
      <div class="flex-shrink-0">
        <%= ingredient_image_tag(ingredient, size: :small) %>
      </div>
      <div>
        <h4 class="font-medium text-stone-100"><%= ingredient.name %></h4>
        <p class="text-xs text-stone-400"><%= ingredient.category %></p>
      </div>
    </div>
    <div class="text-right">
      <% if ingredient.hearts_raw > 0 %>
        <span class="text-red-400 text-sm">❤️ <%= ingredient.hearts_raw %></span>
      <% end %>
      <% if ingredient.has_effect? %>
        <p class="text-xs text-emerald-400"><%= ingredient.effect_type %></p>
      <% end %>
    </div>
  </div>
</div>
